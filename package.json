{
  "name": "fast-duel-api",
  "version": "0.0.0",
  "description": "API for fast-duel project",
  "author": "Chumachenkovlad",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "export NODE_ENV=development && ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "docker:dev:up": "docker-compose -f docker/docker-compose-dev.yml up",
    "docker:dev:down": "docker-compose -f docker/docker-compose-dev.yml down"
  },
  "dependencies": {
    "@nestjs/common": "^5.4.1",
    "@nestjs/core": "^5.4.1",
    "@nestjs/graphql": "^5.4.0",
    "@nestjs/jwt": "^0.2.0",
    "@nestjs/mongoose": "^5.2.2",
    "@nestjs/passport": "^5.1.0",
    "@types/mongoose": "^5.3.2",
    "apollo-server-express": "^2.2.5",
    "dotenv": "^6.1.0",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "mysql2": "^1.6.4",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.2",
    "sequelize": "^4.41.2",
    "sequelize-typescript": "^0.6.6",
    "typescript": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.4.1",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.10",
    "@types/moment": "^2.13.0",
    "@types/node": "^10.12.11",
    "@types/passport-jwt": "^3.0.1",
    "@types/sequelize": "^4.27.32",
    "@types/supertest": "^2.0.5",
    "jest": "^23.5.0",
    "nodemon": "^1.18.7",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "rxjs-tslint-rules": "^4.13.0",
    "supertest": "^3.1.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
